{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2016.array.include",
      "es2017.object"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "noEmit": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src/index.tsx"
  ],
  "exclude": [
    "node_modules",
    "./types"
  ]
}
